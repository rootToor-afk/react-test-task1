{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "typings/index.d.ts",
        "jest.config.js"
    ],
    "exclude": [
        "./src/**/*.test.tsx",
        "./src/**/*.test.ts"
    ]
}